<div class="page-header">
  <h1><%= @album.title %></h1>
</div>

<div class="span8">
  <% if @album.description %>
    <span class="label">Description:</span>
    <p><%= @album.description %></p>
  <% end %>

  <ul class="thumbnails">
    <% if @exposed_image %>
    <li class="span6">
      <div class="thumbnail">
        <%= link_to image_tag(@exposed_image.attachment.url(:medium)), @exposed_image, :class => "thumbnail" %>
        <h5><%= @exposed_image.title %></h5>
        <p>Here comes the description!</p>
      </div>
    </li>
    <% end %>
    <% @images.each do |image| %>
    <li class="span2">
      <div class="thumbnail">
        <%= link_to image_tag(image.attachment.url(:thumb)), image, :class => "thumbnail" %>
        <h5><%= image.title %></h5>
      </div>
    </li>
  <% end %>
  </ul>
</div>
