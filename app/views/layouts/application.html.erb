<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag 'top_up.js', :defaults %>  
    <%= csrf_meta_tag %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <% if signed_in? %>
      <div class="container-fluid">
        <div class="row-fluid">
          <div class="span2">

            <%= render 'layouts/sidebar' %>
          </div>
        <div class="span10">
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"><%= value %><a class="close">&times;</a></div>
          <% end %>
          <%= yield %>
        </div>
      </div>
    <% else %>
      <div class="container">
        <%= yield %>
      </div>
    <% end %>    
    <!--<%= debug(params) if Rails.env.development? %>-->
  </body>
</html>