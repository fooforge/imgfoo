<nav id="user_nav" class="round">
  <ul>
    <% if signed_in? %>
    <li>Logged in as <%= link_to current_user.name, current_user %></li><br />
    <li><%= link_to "New content", new_image_path %></li>
    <li><%= link_to "Settings", edit_user_path(current_user) %></li>
    <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
    <% else %>
    <li>Logged in as nobody</li>
    <%= link_to "Sign up!", signup_path, :class => "signup_button round" %>
    <li><%= link_to "Sign in", signin_path %></li>
    <% end %>
  </ul>
</nav>