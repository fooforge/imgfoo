<div class="page-header">
  <h1>Your albums</h1>
</div>

<ul class="thumbnails">
  <% @albums.each do |album| %>
    <li class="span2">
      <div class="thumbnail">
        <%= link_to image_tag("http://placehold.it/180x140"), album, :class => "thumbnail" %>
        <h5><%= album.title %></h5>
        <p>Here comes the description!</p>
      </div>
    </li>
  <% end %>
</ul>