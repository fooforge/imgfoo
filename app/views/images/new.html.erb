<%= simple_form_for(@image, :html => { :multipart => true }) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <fieldset>
    <legend>Upload image</legend>
      <%= f.input :title, :hint => 'Please provide a title!' %>
      <%= f.input :attachment, :hint => 'Choose a file' %>
      <%= f.button :wrapped, :cancel => root_path %>
  </fieldset>
<% end %>