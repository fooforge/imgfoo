<div class="page-header">
  <h1>Your albums</h1>
</div>

<ul class="thumbnails">
  <% @albums.each do |album| %>
    <li class="span2">
      <div class="thumbnail">
        <% unless album.images.first %>
          <%= link_to image_tag("http://placehold.it/180x140"), album, :class => "thumbnail" %>
        <% else %>
          <%= link_to image_tag(album.images.first.attachment.url(:thumb)), album, :class => "thumbnail" %>
        <% end %>
        <h5><%= album.title %></h5>
        <% if album.description %>
          <p><%= album.description %></p>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>