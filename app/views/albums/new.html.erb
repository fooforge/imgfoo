<%= simple_form_for(@album, :html => { :multipart => true }) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <fieldset>
    <legend>Create album</legend>
      <%= f.input :title, :hint => 'Please provide a title!' %>
      <%= f.button :wrapped, :cancel => root_path %>
  </fieldset>
<% end %>