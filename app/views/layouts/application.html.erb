<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag 'top_up.js', :defaults %>  
    <%= javascript_include_tag 'bootstrap-carousel.js' %>
    <%= csrf_meta_tag %>

    <script type="text/javascript">
      $('.myCarousel').carousel({
      interval: 2000
    })
    </script>
  </head>
  <body>
    <div class="navbar navbar-fixed-top">
      <%= render 'layouts/header' %>
    </div>
    <% if signed_in? %>
      <div class="container-fluid">
        <div class="row-fluid">
          <div class="span2">
            <%= render 'layouts/sidebar' %>
          </div>
        <div class="span10">
          <%= yield %>
        </div>
      </div>
    <% else %>
      <div class="container">
        <%= yield %>
      </div>
    <% end %>    
    <!--<%= debug(params) if Rails.env.development? %>-->
  </body>
</html>